<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgerund"
    android:fillViewport="true"
    tools:context=".Logine">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rel_login_one"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_login_rectangel"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_logo"></ImageView>
    </RelativeLayout>
    <RelativeLayout

        android:layout_marginTop="-50dp"
        android:translationZ="2dp"
     android:layout_marginLeft="@dimen/margin_l_R"
        android:layout_marginRight="@dimen/margin_l_R"
        android:background="@drawable/shape_corner_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_login_one">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:paddingRight="@dimen/margin_l_R"
                    android:id="@+id/txtinput_login_mobile"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                </com.google.android.material.textfield.TextInputLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:translationZ="2dp"
                        android:layout_alignParentRight="true"
                      android:layout_marginRight="5dp"
                       android:layout_centerVertical="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_smartphone"></ImageView>
                    <EditText
                        android:textSize="@dimen/txt_size_10"
                        android:textColor="@color/txt_select"
                        android:textColorHint="@color/txt_unselect"
                        android:singleLine="true"
                        android:inputType="number"
                        android:id="@+id/edt_logine_mobile"
                        android:hint="@string/edt_text_enterMobile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_edt"
                        android:layout_marginRight="@dimen/margin_l_R"
                        android:layout_marginLeft="@dimen/margin_l_R"></EditText>
                </RelativeLayout>

                <Button
                    android:textColor="@color/btn_text"
                    android:id="@+id/btn_logine_enter"
                    android:textSize="@dimen/txt_size_20"
                    android:layout_margin="@dimen/margin_l_R"
                    android:text="@string/btn_login"
                    android:background="@drawable/btn_selector"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_btn"/>

            </LinearLayout>

    </RelativeLayout>
</RelativeLayout>




</ScrollView>