<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</RelativeLayout>
<RelativeLayout

    android:id="@+id/rel_item"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
   android:background="@drawable/shape_chat_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <RelativeLayout
      android:id="@+id/rel_main_img"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="5dp"
      android:background="@drawable/shape_circel_2"
      android:padding="7dp"
      >
    <com.Sadraafzar.Messenger.Image.RoundedImageView
       android:scaleType="center"
        android:id="@+id/img_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icuser2"

        ></com.Sadraafzar.Messenger.Image.RoundedImageView>
  </RelativeLayout>



    <TextView
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/rel_main_img"
        android:layout_toRightOf="@+id/txt_main_time"
        android:gravity="right"
android:id="@+id/txt_main_titel"
        android:text="شرکت صدر"
        android:textColor="@color/txt_select"
        android:textStyle="bold"
        android:textSize="16dp"
       ></TextView>
  <TextView
      android:singleLine="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_marginTop="10dp"
      android:layout_marginRight="20dp"
     android:layout_marginLeft="5dp"
      android:gravity="right"
      android:id="@+id/txt_main_time"
      android:text="7:00"
      android:textColor="@color/txt_select"
      android:textStyle="bold"
      android:textSize="10dp"
      ></TextView>
    <TextView
        android:singleLine="true"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:maxWidth="150dp"
        android:layout_toRightOf="@+id/txt_main_subtitel_count"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/rel_main_img"
        android:id="@+id/txt_main_subtitel"
        android:text="محصول شما رسید"
        android:textAlignment="textStart"
        android:textSize="12dp"
        android:textColor="@color/subblack"
        android:textStyle="normal"
        android:layout_below="@+id/txt_main_titel"></TextView>
  <TextView
      android:singleLine="true"
      android:layout_marginBottom="5dp"
      android:layout_width="30dp"
      android:maxWidth="60dp"
      android:maxLength="3"
      android:layout_height="30dp"
      android:layout_marginTop="5dp"
     android:layout_marginLeft="5dp"
      android:padding="3dp"
      android:layout_alignParentLeft="true"
      android:background="@drawable/shape_cunt"
      android:id="@+id/txt_main_subtitel_count"
      android:text=""
      android:gravity="center"
      android:textAlignment="center"
      android:textSize="12dp"
      android:textColor="@color/whait"
      android:textStyle="normal"
      android:layout_below="@+id/txt_main_titel"></TextView>

</RelativeLayout>
</RelativeLayout>