<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subMesssage">
<RelativeLayout
    android:id="@+id/rel_submessage_one"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_login_rectangel"
    >
    <ImageView
        android:id="@+id/img_submessage_profile"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_circel"
        ></ImageView>
    <TextView
        android:id="@+id/txt_submesage_titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whait"
       android:layout_toLeftOf="@+id/img_submessage_profile"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:text="نام شرکت">

    </TextView>
    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/img_back"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black_24dp"
        ></ImageView>
</RelativeLayout>
   <androidx.recyclerview.widget.RecyclerView
       android:background="@drawable/shape_backgerundchat"

       android:id="@+id/rec_submessage"
       android:layout_below="@+id/rel_submessage_one"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>