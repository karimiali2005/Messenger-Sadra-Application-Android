<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout


        android:background="@drawable/shape_corner_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_login_one">

        <ImageView
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:paddingRight="@dimen/margin_l_R"
                android:id="@+id/txtinput_login_mobile"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/txt_size_20"
                  android:textColor="@color/whait"
                  android:id="@+id/txt_message"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:gravity="center"

                  ></TextView>
            </RelativeLayout>

            <Button
                android:textColor="@color/btn_text"
                android:id="@+id/btn_dialog_enter"
                android:textSize="@dimen/btn_text_size"
                android:layout_margin="@dimen/margin_l_R"
                android:text="تایید"
                android:background="@drawable/btn_selector"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_btn"/>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>